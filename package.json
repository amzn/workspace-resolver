{
  "name": "workspace-resolver",
  "version": "0.0.4",
  "description": "Utility for development on multiple library packages in a workspace. Creates aliases for library packages so you don't have to rebuild both packages to see changes",
  "main": "src/index.js",
  "files": [
    "src",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test:coverage",
